<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Movies</title>
  </head>
  <body>
  <ul>
    <% @movies.each do |movie| %>
    <li>
      <a href="/movies/<%= movie['id']%>"><%=movie['title']  %></a>
      -- <%=movie['year']%> -- <%=movie['rating']%> -- <%=movie['genre']%>
      -- <%=movie['studio']%>
    </li>
    <% end %>
  </ul>

  </body>
</html>
